<project name="AUIK" default="compile" basedir=".">

    <description>
        Buildfile for project AUIK
    </description>

    <!-- Some properties for necessary path definitions -->
    <property name="src"   location="src"/>
    <property name="reportsrc" location="reports"/>
    <property name="build" location="build"/>
    <property name="reports1" location="src/reports"/>
    <property name="reports2" location="build/reports"/>
    <property name="dist"  location="dist"/>
    <property name="libs"  location="lib"/>
    <property name="doc"   location="doc"/>
    <property name="icons" location="/de/bielefeld/umweltamt/aui/icons"/>

    <path id="hibernate-tools">
        <fileset dir="lib">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <taskdef name="hibernatetool"
             classname="org.hibernate.tool.ant.HibernateToolTask"
             classpathref="hibernate-tools" />

    <!-- Some properties for SystemProperties -->
    <property name="auik.hibernate.config" value="hibernate.cfg.xml"/>
    <property name="auik.hibernate.mappings" value="${src}/de/bielefeld/umweltamt/aui/mappings/atl"/>

    <!-- The classpath that includes the necessary external libs and AUIK -->
    <path id="classpath">
        <fileset dir="${libs}">
            <include name="**/*.jar"/>
        </fileset>
        <path location="${build}"/>
    </path>


    <path id="hibernate-classpath">
        <path location="${src}"/>
    </path>


    <target name="hbmmappings" description="Create java classes from hibernate configuration">
        <hibernatetool destdir="${auik.hibernate.mappings}">
            <classpath refid="hibernate-classpath"/>
            <configuration configurationfile="${src}/${auik.hibernate.config}"/>
            <hbm2java/>
        </hibernatetool>
    </target>


    <target name="compile" description="Compile the source">
        <mkdir dir="${build}"/>
        <javac srcdir="${src}" destdir="${build}" debug="on"
               debuglevel="lines,vars,source">
            <classpath>
                <fileset dir="${libs}">
                    <include name="**/*.jar"/>
                </fileset>
            </classpath>
        </javac>
        <copy todir="${build}">
            <fileset dir="${src}">
                <include name="**/*.png"/>
                <include name="**/*.jpg"/>
                <include name="**/*.gif"/>
                <include name="**/*.xml"/>
                <include name="**/*.properties"/>
                <include name="**/*.txt"/>
            </fileset>
        </copy>
    </target>

    <target name="jasper">
        <mkdir dir="${reports1}"/>
        <mkdir dir="${reports2}"/>
        <taskdef name="jrc" classname="net.sf.jasperreports.ant.JRAntCompileTask">
            <classpath refid="classpath"/>
        </taskdef>
        <jrc
            destdir="${reportsrc}"
            tempdir="${reportsrc}"
            keepjava="false">
            <src>
                <fileset dir="${reportsrc}">
                    <include name="**/*.jrxml"/>
                </fileset>
            </src>
            <classpath refid="classpath"/>
        </jrc>
        <copy todir="${reports1}">
            <fileset dir="${reportsrc}">
                <include name="**/*.jasper"/>
            </fileset>
        </copy>
        <copy todir="${reports2}">
            <fileset dir="${reportsrc}">
                <include name="**/*.jasper"/>
            </fileset>
        </copy>
    </target>

    <!-- TODO add the timestamp to the name of the jar archive -->
    <target name="dist" depends="compile,jasper" description="Create a jar archive">
        <mkdir dir="${dist}"/>
        <jar jarfile="${dist}/AUIK.jar" basedir="${build}"/>
    </target>

    <target name="clean" description="Clean up everything but the directory that contains the documentation">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
        <delete>
            <fileset dir="${reportsrc}" includes="**/*.jasper"/>
        </delete>
    </target>

    <target name="cleanall" description="Clean up everything">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
        <delete dir="${doc}"/>
        <delete>
            <fileset dir="${reportsrc}" includes="**/*.jasper"/>
        </delete>
    </target>

    <target name="run" depends="compile,jasper" description="Run the application">
        <java fork="true" classname="de.bielefeld.umweltamt.aui.AUIKSplash">
            <classpath refid="classpath"/>
            <sysproperty key="auik.hibernate.config"
                         value="${auik.hibernate.config}"/>
        </java>
    </target>

    <target name="javadoc" depends="dist" description="Creates JavaDoc for this application">
        <mkdir dir="${doc}"/>
        <javadoc destdir="${doc}" author="true" version="true" use="true">
            <fileset dir="${src}">
                <include name="**/*.java"/>
            </fileset>
        </javadoc>
    </target>

</project>
